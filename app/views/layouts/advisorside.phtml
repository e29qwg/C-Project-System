function countProjects($projectMaps, $level)
{
    $current_semester = Semester::maximum(array("column" => "semester_id"));

    $count = 0;
    
    foreach ($projectMaps as $projectMap)
    {
        $project = Project::findFirst("project_id='$projectMap->project_id' AND project_level_id='$level' AND semester_id='$current_semester'");
        if ($project)
        {
            $count++;
        }
    }

    return $count;
}

function getNewProgress($projectId)
{
    $progresss = Progress::find("project_id='$projectId'");

    $count = 0;

    foreach ($progresss as $progress)
    {
        $progressEvaluate = ProgressEvaluate::findFirst("progress_id='$progress->progress_id' AND evaluation='0'");

        if ($progressEvaluate)
            $count++;
    }

    return $count;
}

